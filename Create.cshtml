
@model GreatOutdoors.Mvc.Models.RetailerViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Retailer</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h2 style="align-content:center">Create Retailer</h2>

        @using (Html.BeginForm())

        {
            <div class="row">
                <div class="col-md-6 mx-auto ">
                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RetailerName, new { @class = "col-form label col-lg-3 " })
                        @Html.TextBoxFor(temp => temp.RetailerName,
                       new { @class = "form-control text col-lg-9 ", placeholder = "Name" })
                        <div class="col-lg-9">
                            @Html.ValidationMessageFor(temp => temp.RetailerName)
                        </div>



                    </div>
                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RetailerMobile, new { @class = "col-form label col-lg-3" })
                        @Html.TextBoxFor(temp => temp.RetailerMobile,
                       new { @class = "form-control text col-lg-9 ",placeholder = "Mobile" })

                        <div class="col-lg-9">
                            @Html.ValidationMessageFor(temp => temp.RetailerMobile)
                        </div>
                    </div>
                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.Email, new { @class = "col-form label col-lg-3" })
                        @Html.TextBoxFor(temp => temp.Email,
                       new { @class = "form-control text col-lg-9 "})

                        <div class="col-lg-9">
                            @Html.ValidationMessageFor(temp => temp.Email)
                        </div>
                    </div>

                    <div class="form-group form-row">

                        @Html.LabelFor(temp => temp.Gender, new { @class = "col-lg-3" })



                        <div class="col-lg-9">
                            @Html.RadioButtonFor(temp => temp.Gender, "Male",
                               new { @class = "form-check-input", @checked= "checked" })
                            <label for="Male">Male</label> &nbsp;  &nbsp;

                            @Html.RadioButtonFor(temp => temp.Gender, "Female",
                               new { @class = "form-check-input" })
                            <label for="Female">Female</label> &nbsp;  &nbsp;

                            @Html.RadioButtonFor(temp => temp.Gender, "Other",
                               new { @class = "form-check-input" })
                            <label for="Other">Other</label>

                            <span>
                                @Html.ValidationMessageFor(temp => temp.Gender)
                            </span>

                        </div>
                    </div>
                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RetailerPassword, new { @class = "col-form label col-lg-3" })
                        @Html.TextBoxFor(temp => temp.RetailerPassword,
                       new { @class = "form-control text col-lg-9 ", placeholder = "Password" })

                        <div class="col-lg-9">
                            @Html.ValidationMessageFor(temp => temp.RetailerPassword)
                        </div>
                    </div>


                    <div class="btn-toolbar text-center well">
                        <button class="btn float-left btn-danger m-lg-auto">Cancel</button>

                        <button class=" btn float-left btn-primary m-lg-auto">Login if already registered</button>

                        <button class="btn float-left btn-primary  m-lg-auto">Register</button>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
